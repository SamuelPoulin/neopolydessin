{
  "name": "server",
  "description": "Projet de base pour le cours de LOG2990",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
    "lint": "eslint --color -c .eslintrc.js --ext .ts ./app",
    "test": "mocha",
    "coverage": "nyc mocha"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "app/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/www.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/nodemailer": "^6.4.0",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "blob": "^0.1.0",
    "body-parser": "^1.19.0",
    "buffer": "^5.6.0",
    "bufferutil": "^4.0.3",
    "chai-http": "^4.3.0",
    "cookie-parser": "1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dom-parser": "^0.1.6",
    "dotenv": "^8.2.0",
    "dotenv-extended": "^2.8.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "form-data": "^3.0.1",
    "http-status-codes": "^1.4.0",
    "i": "^0.3.6",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^6.5.0",
    "mongoose": "^5.11.17",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.18",
    "reflect-metadata": "^0.1.10",
    "request": "^2.88.2",
    "serve-favicon": "~2.5.0",
    "socket.io": "^3.1.1",
    "utf-8-validate": "^5.0.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.1",
    "@types/chai": "^4.2.15",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.6",
    "@types/express": "^4.17.1",
    "@types/express-serve-static-core": "4.16.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "5.2.7",
    "@types/mongodb": "^3.6.8",
    "@types/morgan": "~1.7.35",
    "@types/node": "^12.20.4",
    "@types/node-uuid": "0.0.28",
    "@types/request": "^2.48.4",
    "@types/sinon": "^7.5.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "~4.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-unicorn": "^28.0.2",
    "husky": "^4.0.10",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "3.0.0",
    "sinon": "^7.5.0",
    "ts-node": "^8.6.0",
    "typescript": "^3.9.9"
  }
}
