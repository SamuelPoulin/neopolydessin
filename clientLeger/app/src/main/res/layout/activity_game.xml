<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.game.view.GameActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gameInfoBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_outlined"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/drawboardContainer"
            >
            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/quit_label"
                android:textColor="@color/white"
                android:backgroundTint="#FF7246"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintHeight_percent="1"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/white"
                app:iconSize="30dp"
                app:iconGravity="start"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>


            <ImageView
                android:id="@+id/timerIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_timer_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintLeft_toRightOf="@id/logoutBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.06"
                android:contentDescription="@string/timer_icon_des" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timer_over"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/timerIcon"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:id="@+id/wordGuess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/timer"
                android:paddingStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:paddingEnd="20dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/drawboardContainer"
            android:name="com.projet.clientleger.ui.drawboard.DrawboardFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/chatRoot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameInfoBar"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playersRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/drawboardContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/chatRoot"
            app:layout_constraintWidth_percent="0.3"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/chatRoot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:name="com.projet.clientleger.ui.chat.ChatFragment"
            app:layout_constraintTop_toBottomOf="@id/drawboardContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/playersRv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>