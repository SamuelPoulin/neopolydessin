<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.game.view.GameActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gameInfoBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_outlined"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/drawboardContainer"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/polydessin_icon_round"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/logo" />

            <ImageView
                android:id="@+id/timerIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/download"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.9"
                app:layout_constraintLeft_toRightOf="@id/logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timer_over"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/timerIcon"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:id="@+id/wordGuess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/timer"
                android:paddingStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:paddingEnd="20dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/drawboardContainer"
            android:name="com.projet.clientleger.ui.drawboard.DrawboardFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/chatRoot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameInfoBar"/>

        <LinearLayout
            android:id="@+id/gameInfoContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/drawboardContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/chatRoot"
            app:layout_constraintWidth_percent="0.2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEABOY"/>
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/chatRoot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:name="com.projet.clientleger.ui.chat.ChatFragment"
            app:layout_constraintTop_toBottomOf="@id/drawboardContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gameInfoContainer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>