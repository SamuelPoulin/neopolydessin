<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_lobbyinfo_background"
    android:gravity="center_vertical">

        <TextView
            android:id="@+id/lobbyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/lobby_name"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/gameCapacity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/game_capacity"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/gameMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/game_mode"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/difficulty"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/joinGamebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightGreen"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:text = "@string/join_game"
            android:layout_marginEnd="5dp">
        </Button>

</LinearLayout>