{
  "name": "client",
  "version": "0.0.1",
  "scripts": {
    "start": "ng serve --open --watch",
    "build": "ng build --prod",
    "start:electron": "ng build --base-href \"\" && electron .",
    "build:electron": "ng build --base-href \"\" --prod && electron-builder",
    "format": "prettier --config ../.prettierrc.yaml --write \"src/**/*\"",
    "test:ci": "ng test --no-watch --no-progress --browsers ChromeHeadlessNoSandbox",
    "test": "ng test",
    "coverage": "ng test --code-coverage --sourceMap=true",
    "lint": "eslint --color -c .eslintrc.js --ext .ts ./src/app"
  },
  "main": "electron-main.js",
  "build": {
    "appId": "log3900-204.polydessin",
    "productName": "PolyDessin",
    "protocols": {
      "name": "polydessin-protocol",
      "schemes": [
        "polydessin"
      ]
    },
    "directories": {
      "output": "build",
      "buildResources": "resources"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "resources/icon.png",
      "dist/client/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.{ts, js, css, scss}": [
      "prettier --tab-width 2 --print-width 140 --arrow-parens always --single-quote --trailing-comma 'all' --write",
      "git add"
    ],
    "package.json": [
      "prettier --tab-width 2 --single-quote --trailing-comma 'all' --write",
      "git add"
    ]
  },
  "private": true,
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.14",
    "@angular-eslint/eslint-plugin": "^1.2.0",
    "@angular/cli": "~9.1.14",
    "@angular/compiler-cli": "~9.1.13",
    "@angular/language-service": "~9.1.13",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "codelyzer": "^5.1.2",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.6.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^28.0.0",
    "hammerjs": "^2.0.8",
    "husky": "^4.3.8",
    "jasmine-core": "^3.6.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "lint-staged": "^8.1.3",
    "ng-lint-staged": "^0.1.6",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "protractor": "^5.4.3",
    "ts-node": "~7.0.0",
    "typescript": "~3.8.3"
  },
  "dependencies": {
    "@angular/animations": "~9.1.13",
    "@angular/cdk": "~9.2.4",
    "@angular/common": "~9.1.13",
    "@angular/compiler": "~9.1.13",
    "@angular/core": "~9.1.13",
    "@angular/forms": "~9.1.13",
    "@angular/material": "^9.2.4",
    "@angular/platform-browser": "~9.1.13",
    "@angular/platform-browser-dynamic": "~9.1.13",
    "@angular/router": "~9.1.13",
    "@types/events": "^3.0.0",
    "@types/form-data": "^2.5.0",
    "axios": "^0.21.1",
    "custom-electron-titlebar": "^3.2.6",
    "dotenv": "^8.2.0",
    "form-data": "^3.0.0",
    "karma-electron": "^6.3.3",
    "puppeteer": "^7.0.1",
    "rxjs": "~6.6.3",
    "socket.io-client": "^3.1.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  }
}
