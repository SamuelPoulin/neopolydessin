{
  "name": "client",
  "version": "0.0.1",
  "scripts": {
    "start": "ng serve --open",
    "build": "ng build --prod",
    "start:electron": "ng build --base-href ./ && electron .",
    "build:electron": "ng build --base-href ./ --prod && electron-builder",
    "format": "prettier --config ../.prettierrc.yaml --write \"src/**/*\"",
    "test:ci": "ng test --no-watch --no-progress --browsers ChromeHeadlessNoSandbox",
    "test": "ng test",
    "coverage": "ng test --code-coverage --sourceMap=true",
    "lint": "ng lint --type-check --format stylish"
  },
  "main": "electron-main.js",
  "build": {
    "appId": "log3900-204.polydessin",
    "productName": "PolyDessin",
    "protocols": {
      "name": "polydessin-protocol",
      "schemes": [
        "polydessin"
      ]
    },
    "directories": {
      "output": "build",
      "buildResources": "resources"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "resources/icon.png",
      "dist/client/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.{ts, js, css, scss}": [
      "prettier --tab-width 2 --print-width 140 --arrow-parens always --single-quote --trailing-comma 'all' --write",
      "git add"
    ],
    "package.json": [
      "prettier --tab-width 2 --single-quote --trailing-comma 'all' --write",
      "git add"
    ]
  },
  "private": true,
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.29",
    "@angular/cli": "~8.1.2",
    "@angular/compiler-cli": "~8.1.2",
    "@angular/language-service": "~8.1.2",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.2.2",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "hammerjs": "^2.0.8",
    "husky": "^4.3.8",
    "jasmine-core": "^3.6.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.5.3",
    "lint-staged": "^8.1.3",
    "ng-lint-staged": "^0.1.6",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "protractor": "^5.4.3",
    "ts-node": "~7.0.0",
    "tslint": "^6.1.3",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "~3.4.3"
  },
  "dependencies": {
    "@angular/animations": "~8.1.2",
    "@angular/cdk": "~8.2.3",
    "@angular/common": "~8.1.2",
    "@angular/compiler": "~8.1.2",
    "@angular/core": "~8.1.2",
    "@angular/forms": "~8.1.2",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.1.2",
    "@angular/platform-browser-dynamic": "~8.1.2",
    "@angular/router": "~8.1.2",
    "@types/form-data": "^2.5.0",
    "axios": "^0.21.1",
    "custom-electron-titlebar": "^3.2.6",
    "dotenv": "^8.2.0",
    "form-data": "^3.0.0",
    "karma-electron": "^6.3.3",
    "puppeteer": "^7.0.1",
    "rxjs": "~6.4.0",
    "socket.io-client": "^3.1.0",
    "tslib": "^1.14.1",
    "tslint-defocus": "^2.0.6",
    "zone.js": "~0.9.1"
  }
}
