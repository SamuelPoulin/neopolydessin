{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@services/*": [
        "src/app/services/*"
      ],
      "@utils/*": [
        "src/app/utils/*"
      ],
      "@models/*": [
        "src/app/models/*"
      ],
      "@components/*": [
        "src/app/components/*"
      ],
      "@tools/*": [
        "src/app/models/tools/*"
      ],
      "@tool-properties/*": [
        "src/app/models/tool-properties/*"
      ],
      "@shape-tool-properties/*": [
        "src/app/models/tool-properties/creator-tool-properties-shape-tool-properties"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
